<?xml version="1.0" encoding="UTF-8"?>
<enunciate label="axiom-service-api"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://enunciate.webcohesion.com/schemas/enunciate-2.0.0.xsd">

    <api-classes>
        <include pattern="org.axiom_tools.storage.**" />
        <include pattern="org.axiom_tools.domain.**" />
        <include pattern="org.axiom_tools.faces.**" />
    </api-classes>

    <namespaces>
        <namespace id="axiom-models" uri="http://api.axiom-tools.com/axiom-models"/>
        <namespace id="axiom-storage" uri="http://api.axiom-tools.com/axiom-storage"/>
        <namespace id="axiom-facades" uri="http://api.axiom-tools.com/axiom-facades"/>
    </namespaces>

    <modules>
        <c-xml-client disabled="true" />
        <csharp-xml-client disabled="true" />
        <!--<docs />-->
        <gwt-json-overlay disabled="true" />
        <idl disabled="true" />
        <!--<jackson disabled="false" />-->
        <jackson1 disabled="true" />
        <java-json-client disabled="true" />
        <java-xml-client disabled="true" />
        <jaxb disabled="true" />
        <jaxws disabled="true" />
        <obj-c-xml-client disabled="true" />
        <php-json-client disabled="true" />
        <php-xml-client disabled="true" />
        <ruby-json-client disabled="true" />
        <!--<swagger />-->

        <jaxrs groupBy="class">
            <application path="api" />
        </jaxrs>

    </modules>

    <disable-rule id="all.warnings" />
    <webapp disabled="true" />

</enunciate>