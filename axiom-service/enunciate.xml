<?xml version="1.0" encoding="UTF-8"?>
<enunciate label="axiom-service-api"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://enunciate.webcohesion.com/schemas/enunciate-1.30.xsd">

    <services>
        <rest defaultRestSubcontext="/api" />
    </services>
    
    <api-classes>
        <include pattern="org.axiom_tools.storage.**" />
        <include pattern="org.axiom_tools.domain.**" />
    </api-classes>

    <namespaces>
        <namespace id="axiom-models" uri="http://api.axiom-tools.com/axiom-models"/>
        <namespace id="axiom-storage" uri="http://api.axiom-tools.com/axiom-storage"/>
        <namespace id="axiom-facades" uri="http://api.axiom-tools.com/axiom-facades"/>
    </namespaces>

    <modules>
        <docs includeExampleJson="true" forceExampleJson="true" />
        <cxf enableJaxrs="true" enableJaxws="false" />

        <c disabled="true" />
        <csharp disabled="true" />
        <obj-c disabled="true" />
        <java-client disabled="true" />
        <jaxws disabled="true" />
        <jaxws-ri disabled="true" />
        <jaxws-client disabled="true" />
        <ruby disabled="true" />
        <php disabled="true" />

    </modules>

    <disable-rule id="all.warnings" />
    <webapp disabled="true" />

</enunciate>