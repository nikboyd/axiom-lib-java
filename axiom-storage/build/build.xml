<?xml version="1.0"?>
<project name="axiom-storage" basedir=".">
	
	<property file="build.properties" />
	<import file="${common-targets}" as="common"/>
	<property name="resource.files" value="lib.version.properties,jdbc.properties"/>
	<property name="maven.project.folder" value=".."/>
	<property name="module.command" value="install"/>
	<property name="build.target" value="dev"/>
	
	<target name="clean">
		<delete dir="../target" />
	</target>

	<target name="configure" depends="clean,configure.version">
		<antcall target="configure.maven.project" inheritall="true">
	    	<param name="resource.filters" value="lib.version.properties"/>
		</antcall>
	</target>
	
	<target name="maven" depends="configure">
		<antcall target="run.maven" inheritall="true">
	    	<param name="product.folder" value=".."/>
			<param name="settings.path" value="../build/settings.xml"/>
		</antcall>
	</target>
	
	<target name="build" depends="maven" />

</project>
